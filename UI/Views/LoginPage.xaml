<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Grid
            ColumnDefinitions="*,*"
            RowDefinitions="*,*,*,*"
            >

            <!--Nickname-->
            
            <Label
                Grid.Row="1"
                Grid.Column="1"/>
            <Entry
                Grid.Row="1"
                Grid.Column="2"/>

            <!--Password-->
            
            <Label
                Grid.Row="2"
                Grid.Column="1"/>
            <Entry
                Grid.Row="2"
                Grid.Column="2"/>
            
            <!--Buttons-->

            

        </Grid>
        <HorizontalStackLayout
            Spacing="10">
            <Button
                Text="Sign in"/>
            <Button
                Text="Sign up"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>