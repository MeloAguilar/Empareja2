<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.LoginPage"
             xmlns:vm="clr-namespace:UI.ViewModels"
             Title="LoginPage">
    <ContentPage.BindingContext>
        <vm:LoginVM/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Grid
            ColumnDefinitions="*,*"
            RowDefinitions="*,*,*,*"
            >

            <!--Nickname-->
            
            <Label
                Text="Nickname"
                Grid.Row="1"
                Grid.Column="1"/>
            <Entry
                Grid.Row="1"
                Grid.Column="2"
                Text="{Binding Nick}"/>

            <!--Password-->
            
            <Label
                Text="Password"
                Grid.Row="2"
                Grid.Column="1"/>
            <Entry
                Grid.Row="2"
                Grid.Column="2"
                Text="{Binding Password}"/>
            
            <!--Buttons-->

            

        </Grid>
        <HorizontalStackLayout
            Spacing="10">
            <Button
                Text="Sign in"
                Command="{Binding SignInCommand}"/>
            <Button
                Text="Sign up"
                Command="{Binding SignUpCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>