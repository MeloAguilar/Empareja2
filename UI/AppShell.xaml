<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        Route="login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        FlyoutItemIsVisible="False"/>
    
    
    <FlyoutItem Title="ScoreBoard"
                Icon="scoreicon.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ScoreboardPage}" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Game"
                Icon="gameicon.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:GamePage}" />
        </Tab>
    </FlyoutItem>
    

  
       

        <ShellContent 
            Title="Log out"
            Icon="back.png"
            ContentTemplate="{DataTemplate local:LoginPage}"
            FlyoutItemIsVisible="False"/>
  

    
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPAge}"
        Route="main"
        FlyoutItemIsVisible="True"/>

</Shell>
